{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/src/Game",
                "${workspaceFolder}/src/Math",
                "${workspaceFolder}/src/Physics",
                "${workspaceFolder}/src/Render",
                "/opt/homebrew/include",
                "/opt/homebrew/include/GLFW",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks/OpenGL.framework/Headers"
            ],
            "defines": [
                "GL_SILENCE_DEPRECATION"
            ],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64",
            "compilerArgs": [
                "-framework",
                "OpenGL"
            ]
        }
    ],
    "version": 4
}